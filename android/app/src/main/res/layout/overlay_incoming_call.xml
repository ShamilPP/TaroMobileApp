<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Name and Owner -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rahul JP"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/lato_bold" />

                <TextView
                    android:id="@+id/tv_owner_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" (Owner)"
                    android:textColor="#666666"
                    android:textSize="11sp"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/lato_regular" />

            </LinearLayout>

            <!-- New Lead Button -->
            <TextView
                android:id="@+id/btn_new_lead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Lead"
                android:textColor="#4CAF50"
                android:textSize="11sp"
                android:textStyle="bold"
                android:background="@drawable/new_lead_button_bg"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/lato_bold" />

        </LinearLayout>

        <!-- Property Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ "
                android:textSize="11sp"
                android:layout_marginEnd="6dp" />

            <TextView
                android:id="@+id/tv_property_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 BHK Furnished Apartments"
                android:textColor="#666666"
                android:textSize="11sp"
                android:fontFamily="@font/lato_regular" />

        </LinearLayout>

        <!-- Location and Price -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“"
                android:textSize="11sp"
                android:layout_marginEnd="6dp" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kakkanad"
                android:textColor="#666666"
                android:textSize="11sp"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/lato_regular" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’°"
                android:textSize="11sp"
                android:layout_marginEnd="6dp" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹35,000/Month"
                android:textColor="#666666"
                android:textSize="11sp"
                android:fontFamily="@font/lato_regular" />

        </LinearLayout>

        <!-- Target Audience -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‘¥"
                android:textSize="11sp"
                android:layout_marginEnd="6dp" />

            <TextView
                android:id="@+id/tv_target_audience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bachelor(F), Working Women"
                android:textColor="#666666"
                android:textSize="11sp"
                android:fontFamily="@font/lato_regular" />

        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginTop="8dp">

    <!-- View Button on Left -->
    <TextView
        android:id="@+id/tv_show_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Details"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:gravity="start"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/show_more_button_bg"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:fontFamily="@font/lato_regular" />

    <!-- Spacer to push Done to right -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Done Button on Right -->
    <TextView
        android:id="@+id/btn_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold"
        android:background="@drawable/done_button_bg_updated"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/lato_bold" />
</LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>